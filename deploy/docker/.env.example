# ===========================================
# ThreatDiviner Environment Configuration
# ===========================================

# Database
POSTGRES_USER=threatdiviner
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=threatdiviner

# JWT
JWT_SECRET=your-256-bit-secret-here
JWT_EXPIRES_IN=1d

# Encryption (32 bytes for AES-256)
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# CORS
CORS_ORIGIN=https://yourdomain.com

# API URL for frontend builds
NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# ===========================================
# Cache Configuration
# ===========================================
CACHE_TTL_SECONDS=300
CACHE_KEY_PREFIX=td:

# ===========================================
# AI Features
# ===========================================
ANTHROPIC_API_KEY=sk-ant-xxx
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# ===========================================
# OAuth Providers (at least one required)
# ===========================================

# GitHub
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# GitLab
GITLAB_CLIENT_ID=
GITLAB_CLIENT_SECRET=
GITLAB_URL=https://gitlab.com

# Bitbucket
BITBUCKET_CLIENT_ID=
BITBUCKET_CLIENT_SECRET=

# Azure DevOps
AZURE_DEVOPS_CLIENT_ID=
AZURE_DEVOPS_CLIENT_SECRET=

# ===========================================
# Notifications (all optional)
# ===========================================

# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx

# Microsoft Teams
TEAMS_WEBHOOK_URL=https://xxx.webhook.office.com/webhookb2/xxx

# Discord
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxx/xxx

# PagerDuty
PAGERDUTY_ROUTING_KEY=

# OpsGenie
OPSGENIE_API_KEY=

# ===========================================
# Email (optional)
# ===========================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@yourdomain.com

# ===========================================
# Jira Integration (optional)
# ===========================================
JIRA_DEFAULT_URL=https://your-company.atlassian.net

# ===========================================
# SSL Configuration
# ===========================================
SSL_CERT_PATH=/path/to/certs
